@using APRST.WEB.Models
@model APRST.WEB.Models.TestWithQuestionViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>TestViewModel</h4>

    <hr />

    @Html.RouteLink("Create New", new { action = "Create", controller = "Question", id = Model.Id })

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NameOfTest)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameOfTest)
        </dd>

        <table class="table">
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th></th>
            </tr>

            @foreach (TestQuestionViewModel item in @Model.Questions)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@Html.RouteLink(item.Question, new { action = "Details", controller = "Question", id = item.Id })</td>
                    <td>
                        @Html.RouteLink("Edit", new { action = "Edit", controller = "Question", id = item.Id }) |
                        @Html.RouteLink("Delete", new { action = "Delete", controller = "Question", id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
