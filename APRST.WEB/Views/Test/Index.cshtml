@model IEnumerable<APRST.WEB.Models.TestInfoViewModel>

@{
    ViewBag.Title = "Тесты";
}

<h2>Тесты</h2>

<p>
    @Html.ActionLink("Создать новый тест", "Create", new { area = "" }, new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table">
    <tr class="success">
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th>
            Категория
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameOfTest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
        @Html.RouteLink(item.Category, new { action = "Details", controller = "TestCategory", id = item.TestCategoryId })
        </td>
        <td style="text-align: right;"> 
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }, new { @class = "btn btn-success btn-xs" })
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
