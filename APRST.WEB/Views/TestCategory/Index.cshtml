@model IEnumerable<APRST.WEB.Models.TestCategoryViewModel>

@{
    ViewBag.Title = "Категории тестов";
}

<h2>Категории тестов</h2>

<p>
    @Html.ActionLink("Создать новую категорию", "Create", new { area = "" }, new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table">
    <tr class="success">
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameOfCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td style="text-align: right;">
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
